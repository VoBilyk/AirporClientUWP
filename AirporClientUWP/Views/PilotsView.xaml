<Page
    x:Class="AirporClientUWP.Views.PilotsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AirporClientUWP.Views"
    xmlns:m="using:AirporClientUWP.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListView Grid.Column="0" ItemsSource="{x:Bind pilots}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="m:Pilot">
                    <Grid Margin="16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="24"/>
                            <RowDefinition Height="24"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal"
                                        Grid.Row="0">
                            <TextBlock Text="{x:Bind FirstName}"
                                        Foreground="Black"
                                        FontSize="16"
                                        Padding="20,0,0,0"
                                        Grid.Row="0"/>
                            <TextBlock Text="{x:Bind LastName}"
                                        Foreground="Black"
                                        FontSize="16"
                                        Padding="5,0,0,0"
                                        Grid.Row="0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                        Grid.Row="1">
                            <TextBlock Text="{x:Bind BirthDate.ToShortDateString()}"
                                            Foreground="#444444"
                                            FontSize="13"
                                            Padding="20,0,0,0"/>
                            <TextBlock Text="Experience:"
                                            Foreground="#888888"
                                            FontSize="13"
                                            Padding="20,0,0,0"/>
                            <TextBlock Text="{x:Bind Experience}"
                                            Foreground="#444444"
                                            FontSize="13"
                                            Padding="6,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
